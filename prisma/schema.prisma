datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid()) // UUID type for id
  name          String
  email         String   @unique
  password      String   @db.VarChar(100)
  createdAt     DateTime @default(now())
  projects      Project[]  // Reverse relation to Project (One-to-many)
  tasksAssigned Task[]     // Reverse relation to Task (One-to-many)
}

model Project {
  id          String   @id @default(uuid())  // UUID type for id
  name        String
  description String
  status      ProjectStatus
  createdAt   DateTime @default(now())
  userId      String   // UUID type for userId
  user        User     @relation(fields: [userId], references: [id])
  tasks       Task[]   // Reverse relation to Task (One-to-many)

  updatedAt   DateTime @updatedAt
}

model Task {
  id             String      @id @default(uuid())  // UUID type for id
  title          String
  description    String
  status         TaskStatus
  createdAt      DateTime    @default(now())
  projectId      String      // UUID type for projectId
  project        Project     @relation(fields: [projectId], references: [id])
  assignedUserId String      // UUID type for assignedUserId
  assignedUser   User        @relation(fields: [assignedUserId], references: [id])
}

enum ProjectStatus {
  PLANNED
  ONGOING
  COMPLETED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
